<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" maxWidth="540.0" prefHeight="600.0" style="-fx-background-color: #ffffff" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kemri_visitors_project.RegisterVisitorController">
    <children>
       <HBox alignment="CENTER" spacing="8.0">
          <children>
             <Label text="Register New Visitor" textFill="#408ae4">
                <font>
                   <Font size="18.0" />
                </font>
             </Label>
          </children>
       </HBox>
       <HBox alignment="CENTER" spacing="8.0">
          <children>
             <Label prefHeight="17.0" prefWidth="160.0" text="Visitor ID Number" textFill="#b51b72">
                <HBox.margin>
                   <Insets bottom="10.0" top="10.0" />
                </HBox.margin>
                <font>
                   <Font size="16.0" />
                </font>
             </Label>
             <TextField fx:id="visitor_ID_number" prefHeight="25.0" prefWidth="224.0" promptText="enter visitor ID number">
                <HBox.margin>
                   <Insets bottom="10.0" top="10.0" />
                </HBox.margin>
                <font>
                   <Font size="16.0" />
                </font>
             </TextField>
          </children>
       </HBox>
       <HBox alignment="CENTER" spacing="8.0">
          <children>
             <Label prefHeight="17.0" prefWidth="160.0" text="Visitor Name" textFill="#b51b72">
                <HBox.margin>
                   <Insets bottom="10.0" top="10.0" />
                </HBox.margin>
                <font>
                   <Font size="16.0" />
                </font>
             </Label>
             <TextField fx:id="visitor_name" prefHeight="25.0" prefWidth="224.0" promptText="enter visitor name">
                <HBox.margin>
                   <Insets bottom="10.0" top="10.0" />
                </HBox.margin>
                <font>
                   <Font size="16.0" />
                </font>
             </TextField>
          </children>
       </HBox>
       <HBox alignment="CENTER" spacing="8.0">
          <children>
             <Label prefHeight="17.0" prefWidth="160.0" text="Visitor Phone Number" textFill="#b51b72">
                <HBox.margin>
                   <Insets bottom="10.0" top="10.0" />
                </HBox.margin>
                <font>
                   <Font size="16.0" />
                </font>
             </Label>
             <TextField fx:id="visitor_phone_number" prefHeight="25.0" prefWidth="224.0" promptText="enter visitor phone number">
                <HBox.margin>
                   <Insets bottom="10.0" top="10.0" />
                </HBox.margin>
                <font>
                   <Font size="16.0" />
                </font>
             </TextField>
          </children>
       </HBox>
       <HBox alignment="CENTER" spacing="240.0">
          <children>
             <Label mnemonicParsing="false" prefWidth="64">
                <HBox.margin>
                   <Insets bottom="10.0" right="0.0" top="10.0" />
                </HBox.margin>
                <font>
                   <Font size="16.0" />
                </font>
             </Label>
             <Button mnemonicParsing="false" prefWidth="80" text="Register" onAction="#handleRegisterAction" textFill="#22bae5">
                <HBox.margin>
                   <Insets bottom="10.0" right="0.0" top="10.0" />
                </HBox.margin>
                <font>
                   <Font size="16.0" />
                </font>
             </Button>
          </children>
       </HBox>
    </children>
 </VBox>