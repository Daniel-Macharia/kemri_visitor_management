                        </children>
                    </HBox>
                    
                    <HBox fx:id="getReportBox" alignment="CENTER" HBox.hgrow="ALWAYS" >
                        <children>
                            <Button onAction="#handleGetVisitReportAction" prefHeight="17.0" prefWidth="104.0" text="Visit Report" textFill="#b51b72">
                               <HBox.margin>
                                  <Insets bottom="10.0" top="10.0" />
                               </HBox.margin>
                               <font>
                                  <Font size="14.0" />
                               </font>
                            </Button>
                        </children>
                    </HBox>
                    
                    <HBox fx:id="generateQRBox" alignment="CENTER" HBox.hgrow="ALWAYS">
