                            <Button onAction="#handleGenerateQRCodeAction" prefHeight="17.0" prefWidth="104.0" text="Generate ID QR Value" textFill="#b51b72">
                               <HBox.margin>
                                  <Insets bottom="10.0" top="10.0" />
                               </HBox.margin>
                               <font>
                                  <Font size="14.0" />
                               </font>
                            </Button>
                        </children>
                    </HBox>
                    
                </children>
            </HBox>
            
            <HBox alignment="CENTER" style="-fx-background-color: #dddddd" HBox.hgrow="ALWAYS" spacing="8.0">
                <children>
                    <Button onAction="#handleLogOutAction" prefHeight="17.0" prefWidth="104.0" text="Log Out" textFill="#b51b72">
                       <HBox.margin>
                          <Insets bottom="10.0" top="10.0" />
                       </HBox.margin>
                       <font>
                          <Font size="14.0" />
                       </font>
                    </Button>
                </children>
            </HBox>
