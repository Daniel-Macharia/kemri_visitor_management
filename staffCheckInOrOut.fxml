<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<VBox
        fx:id="tab"
        alignment="CENTER"
        xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      style="-fx-background-color: #ffffff"
      fx:controller="kemri_visitors_project.StaffCheckInOrOut"
      prefHeight="600.0" maxWidth="600.0">

    <HBox alignment="CENTER" spacing="8.0">
        <children>
            <Label text="Staff Check In/Out" textFill="#408ae4">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
        </children>
    </HBox>
    <HBox alignment="CENTER" spacing="8.0">
        <children>
            <Label prefHeight="17.0" prefWidth="160.0" text="Staff Number" textFill="#b51b72">
                <HBox.margin>
                    <Insets bottom="10.0" top="10.0" />
                </HBox.margin>
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <TextField fx:id="staffNumber" prefHeight="25.0" prefWidth="224.0" promptText="enter staff number">
                <HBox.margin>
                    <Insets bottom="10.0" top="10.0" />
                </HBox.margin>
                <font>
                    <Font size="16.0" />
                </font>
            </TextField>
        </children>
    </HBox>
    <HBox alignment="CENTER" spacing="222.0">
        <children>
            <Label mnemonicParsing="false" prefWidth="64">
                <HBox.margin>
                    <Insets bottom="10.0" right="0.0" top="10.0" />
                </HBox.margin>
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <Button mnemonicParsing="false" prefHeight="30.0" text="Check In/Out" onAction="#handleStaffCheckInOrOutAction" textFill="#22bae5">
                <HBox.margin>
                    <Insets bottom="10.0" top="10.0" />
                </HBox.margin>
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
        </children>
    </HBox>

</VBox>
